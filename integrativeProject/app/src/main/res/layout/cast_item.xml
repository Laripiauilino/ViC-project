<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/backgroundColor"
    android:layout_margin="@dimen/xsmall" >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgCharacter"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        app:civ_border_color="@color/backgroundColor"
        app:civ_border_width="3dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtActorName"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_regular"
        android:layout_marginTop="12dp"
        android:textAlignment="center"
        android:textColor="@color/movieTitleColor"
        app:layout_constraintStart_toStartOf="@+id/imgCharacter"
        app:layout_constraintTop_toBottomOf="@+id/imgCharacter"
        tools:text="Nome do Ator" />

    <TextView
        android:id="@+id/txtCharacterName"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:fontFamily="@font/lato_regular"
        android:textAlignment="center"
        android:textColor="@color/movieInfoTextColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imgCharacter"
        app:layout_constraintTop_toBottomOf="@+id/txtActorName"
        tools:text="Nome do personagem" />

</androidx.constraintlayout.widget.ConstraintLayout>