<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomCardCornersEvaluation" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceCustomCorners</item>
    </style>

    <style name="ShapeAppearanceCustomCorners" parent="">
        <item name="cornerSizeTopLeft">30dp</item>
        <item name="cornerSizeBottomLeft">30dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="CustomCardCornersPoster" parent="">
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">30dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="movieTitle">
        <item name="android:text">@string/movieTitle</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="genreDetails">
        <item name="android:layout_marginTop">@dimen/small</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/small</item>
    </style>

    <style name="CustomTabTextLayout" parent="Theme.IntegrativeProject">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/mediumSp</item>
        <item name="fontFamily">@font/lato_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="backgroundCustomChip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/backgroud_chip_color</item>
        <item name="android:textColor">@color/text_chip_color</item>
    </style>

    <style name="customBackTextButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="ChipGenreMovieDetail" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/backgroundColor</item>
        <item name="android:textColor">@color/textChip</item>
        <item name="chipStrokeColor">@color/backgroud_chip_color</item>
        <item name="chipStrokeWidth">2dp</item>
    </style>
</resources>