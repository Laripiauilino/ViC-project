<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomCardCornersEvaluation" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance_custom_corners</item>
    </style>

    <style name="ShapeAppearance_custom_corners" parent="">
        <item name="cornerSizeTopLeft">30dp</item>
        <item name="cornerSizeBottomLeft">30dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="CustomCardCornersPoster" parent="">
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomLeft">30dp</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="movieTitle">
        <item name="android:text">@string/movie_title</item>
        <item name="fontFamily">@font/lato_normal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="genre_detail">
        <item name="android:layout_marginHorizontal">@dimen/small</item>
        <item name="android:layout_marginTop">@dimen/small</item>
        <item name="android:paddingHorizontal">@dimen/small</item>
        <item name="android:paddingVertical">@dimen/xxsmall</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/small</item>
    </style>

    <style name="CustomTabTextLayout" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
<!--        Não está mudando o tamanho do texto do primeiro tab-->
<!--        <item name="android:textSize">24sp</item>-->
        <item name="fontFamily">@font/lato_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="background_custom_chip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/backgroud_chip_color</item>
        <item name="android:textColor">@color/text_chip_color</item>
    </style>
</resources>